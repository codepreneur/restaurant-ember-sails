<ul id="customer-tab">
	{{#each tabItem in tabItems}}
		<li>
			<h3>{{tabItem.food.name}}<span>${{format-money tabItem.cents}}</span></h3>
			<button {{action "removeTabItem" tabItem}}>Remove {{tabItem.food.name}}</button>
		</li>
	{{else}}
		<li>
			<h3>Click on a food to add it</h3>
		</li>
	{{/each}}
	<li id="total">
		<h3>Total <span>${{format-money cents}}</span></h3>
	</li>
</ul>